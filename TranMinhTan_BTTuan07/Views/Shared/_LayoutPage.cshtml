<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <link href="~/Content/CSS/Style1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap/css/CSSMenu.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body>
    <div style="background-color:#EEE;min-height:680px">
        <div style="width:100%; box-shadow: -5px -5px 5px #d7d7d7;">
            <div class="row ">
                <div class="row col-12 Home-header">
                    <a href="@Url.Action("Index","Home")">
                        <img src="~/Images/CarRepair.png" style="width:55px;" />
                        Home
                    </a>
                </div>
            </div>
            <div class="row" style="margin-left: 0px; ">
                <div class="col-md-2" style="height: 672px; overflow-y: auto;">
                    <ul class="nav flex-column" style="margin-left: -5%; height: 100%; background-color: #16134e; border-radius: 10px;">
                        <center class="Menu" style=" color: white; height: 52px; background-color: #16134e;">
                            <img src="~/Images/th-list-128.png" style=" width: 27px; height: 20px; margin-bottom: 1%;" />
                            <span style="font-size:20px">MENU</span>
                        </center>
                        <li style=" display: contents">
                            <a class="Menu" href="@Url.Action("Index", "PhanHe")">
                                <img src="~/Images/gear.png" style="width: 30px;" /> Phân hệ
                            </a>
                            <a class="Menu" href="@Url.Action("Index", "Truong")">
                                <img src="~/Images/gear.png" style="width: 30px;" /> Trường
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-10" style=" border-radius: 5px; padding-right: 2%;">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</body>
</html>
